# Constants should start with UpperCase
dotnet_naming_rule.constant_should_be_pascal_case.severity = warning
dotnet_naming_rule.constant_should_be_pascal_case.symbols = const_group
dotnet_naming_rule.constant_should_be_pascal_case.style = pascal_case_style
